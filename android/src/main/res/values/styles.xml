<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Root styles that vary by API level -->
    <!-- Disable RTL support on older devices -->
    <!-- Prevents crash on certain devices to namespace conflict -->
    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat.NoActionBar"/>

    <style name="Theme" parent="FrameworkRoot.Theme"/>
    <!-- Only needed for pre-L -->
    <!--<item name="android:editTextBackground">@drawable/edit_text</item>-->
    <!--<item name="android:editTextStyle">@style/Widget.IOSched.EditText</item>-->
    <!--</style>-->

    <!-- Base application theme. -->
    <style name="Theme.SaldoTuc.Base" parent="Theme">
        <item name="actionBarIconColor">#fff</item>
        <item name="actionBarInsetStart">@dimen/keyline_2</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="photoItemForeground">?android:selectableItemBackground</item>
        <item name="photoItemForegroundBorderless">?android:selectableItemBackground</item>

        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/grey_light_background</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="Theme.SaldoTuc" parent="Theme.SaldoTuc.Base"/>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="InputLayout">
        <item name="android:paddingBottom">@dimen/keyline_1_minus_8dp</item>
        <item name="android:paddingLeft">@dimen/keyline_1</item>
        <item name="android:paddingRight">@dimen/keyline_1</item>
        <item name="android:paddingTop">@dimen/keyline_1</item>
    </style>

    <style name="CardAction">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:drawableTint">#636363</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
