<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/cards_list_horizontal_margin"
        android:layout_marginTop="@dimen/cards_list_vertical_margin"
        android:id="@+id/actionsLayout"
        android:background="@drawable/card_item_actions"
        android:visibility="invisible">

        <Button
            android:id="@+id/cardActionBalance"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_balance_background"
            android:focusable="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:scaleType="fitXY"
            android:src="@drawable/button_divider"
            android:contentDescription="@string/content_desc_actions_divider"/>

        <Button
            android:id="@+id/cardActionEdit"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_edit_background"
            android:focusable="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:scaleType="fitXY"
            android:src="@drawable/button_divider"
            android:contentDescription="@string/content_desc_actions_divider"/>

        <Button
            android:id="@+id/cardActionDelete"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_discard_background"
            android:focusable="false" />

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/cards_list_horizontal_margin"
        android:layout_marginRight="@dimen/cards_list_horizontal_margin"
        android:layout_marginTop="@dimen/cards_list_vertical_margin"
        android:paddingBottom="@dimen/cards_list_vertical_padding"
        android:paddingLeft="@dimen/cards_list_horizontal_padding"
        android:paddingRight="@dimen/cards_list_horizontal_padding"
        android:paddingTop="@dimen/cards_list_vertical_padding"
        android:id="@+id/infoLayout"
        android:background="@drawable/card_item">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#282830"
            android:id="@+id/cardName"
            android:layout_marginBottom="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#7e8894"
            android:id="@+id/cardNumber"
            android:layout_below="@+id/cardName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#7e8894"
            android:id="@+id/cardBalance"
            android:layout_below="@+id/cardName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>