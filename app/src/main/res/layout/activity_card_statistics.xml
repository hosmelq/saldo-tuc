<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.socialimprover.saldotuc.ui.CardStatisticsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <com.androidplot.xy.XYPlot
        android:id="@+id/mySimpleXYPlot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="gone"
        androidPlot.graphWidget.marginBottom="15dp"
        androidPlot.graphWidget.marginLeft="15dp"
        androidPlot.graphWidget.marginRight="5dp"
        androidPlot.graphWidget.marginTop="5dp"
        androidPlot.graphWidget.gridPaddingBottom="10dp"
        androidPlot.graphWidget.gridPaddingLeft="15dp"
        androidPlot.graphWidget.gridPaddingRight="20dp"
        androidPlot.graphWidget.gridPaddingTop="15dp"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/chart_range_tick_label_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/chart_domain_tick_label_font_size"
        androidPlot.legendWidget.textPaint.textSize="@dimen/chart_legend_text_font_size"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="6dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="6dp"
        androidPlot.legendWidget.heightMetric.value="24dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_bottom" />

</RelativeLayout>
